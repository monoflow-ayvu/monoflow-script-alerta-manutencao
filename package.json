{
  "name": "alerta-manutencao",
  "version": "0.2.0",
  "description": "Script para mostrar uma alerta ao ter tarefas especificas abertas",
  "settingsSchema": {
    "display": "form",
    "settings": {
      "pdf": {
        "id": "1ec0f8ee-6685-5d98-a847-26f67b67d6f0",
        "src": "https://files.form.io/pdf/5692b91fd1028f01000407e3/file/1ec0f8ee-6685-5d98-a847-26f67b67d6f0"
      }
    },
    "components": [
      {
        "label": "Minutos para esperar até apresentar alarme",
        "mask": false,
        "tableView": false,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true
        },
        "key": "minutes",
        "type": "number",
        "input": true,
        "defaultValue": 5
      },
      {
        "label": "Tags",
        "tableView": false,
        "storeas": "array",
        "validate": {
          "required": true
        },
        "key": "tags",
        "type": "tags",
        "input": true
      },
      {
        "label": "Título do alarme",
        "autoExpand": false,
        "tableView": true,
        "defaultValue": "Tarefa pendente",
        "validate": {
          "required": true
        },
        "key": "title",
        "type": "textfield",
        "rows": 1,
        "input": true
      },
      {
        "label": "Mensagem do alarme",
        "tableView": true,
        "key": "message",
        "type": "textfield",
        "input": true
      },
      {
        "label": "Acção OK",
        "tooltip": "Texto do botão para dar OK",
        "tableView": true,
        "validate": {
          "required": true
        },
        "key": "action",
        "type": "textfield",
        "input": true,
        "defaultValue": "OK"
      },
      {
        "label": "Submit",
        "showValidations": false,
        "block": true,
        "disableOnInvalid": true,
        "tableView": false,
        "key": "submit",
        "type": "button",
        "input": true,
        "saveOnEnter": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.26.7",
    "@babel/plugin-transform-arrow-functions": "7.25.9",
    "@babel/preset-env": "7.26.7",
    "@babel/preset-typescript": "7.26.0",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "11.1.6",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.15",
    "@types/node": "22.12.0",
    "@types/uuid": "10.0.0",
    "babel-loader": "9.2.1",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "13.1.0",
    "compression-webpack-plugin": "11.1.0",
    "graphql": "16.10.0",
    "graphql-request": "7.1.2",
    "inquirer": "12.3.3",
    "jest": "29.7.0",
    "mobx-keystone": "1.11.1",
    "semver": "7.7.0",
    "size-limit": "11.1.6",
    "ts-loader": "9.5.2",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.5",
    "webpack": "5.97.1",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "11.10.0",
    "cross-fetch": "3.2.0",
    "firebase": "9.23.0",
    "lodash": "4.17.21",
    "mobx": "6.13.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
